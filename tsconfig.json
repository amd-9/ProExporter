{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "target": "es5",
        "rootDir": "src/",
        "outDir": "dist/",
        "jsx": "react",
        "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.promise"
        ],
        "types": [
            "react",
            "jest",
            "node"
        ],
        "esModuleInterop": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": { 
        "azure-devops-extension-api": ["node_modules/azure-devops-extension-api" ]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}